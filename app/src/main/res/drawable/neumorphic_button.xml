<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="15dp" />
    <solid android:color="#E0E5EC" />
    <!-- Тіні для Neumorphic ефекту -->
    <stroke
        android:width="1dp"
        android:color="#D8DDE4" />
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    <!-- Верхня тінь (світла) -->
    <elevation android:elevation="5dp" />
    <!-- Нижня тінь (темна) -->
    <shadowColor android:color="#C7CCD2" />
</shape>